#!/usr/bin/env bash
SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
if [[ $1 == "clv-install" ]]; then
    if [[ ! -e ~/.clv/bin/git ]]; then
        echo "clv is installing git"
        cp "$SCRIPTPATH/git" ~/.clv/bin/git
    fi
else
    docker run -it --rm \
        --entrypoint "git" \
        --network host \
        -v "$HOME/.clv/home:/root" \
        -v "$PWD:/clv" \
        -w "/clv" \
        -a STDOUT \
        alpine/git "$@"
fi

