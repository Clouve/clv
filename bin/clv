#!/usr/bin/env bash
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
if [[ $1 == "clv-install" ]]; then
    if [[ ! -e ~/.clv/bin/clv ]]; then
        echo "clv is installing clv"
        cp "$SCRIPT_PATH/clv" ~/.clv/bin/clv
    fi
else
    source "$SCRIPT_PATH"/_ports
    docker run -it --rm \
        ${PUBLISHED_PORTS:-"--network=host"} \
        -e PYTHONUSERBASE="/root/python" \
        -e PATH="/root/node/bin:$PATH" \
        -v "$HOME/.clv/home:/root" \
        -v "$PWD:/clv" \
        -w "/clv" \
        -a STDOUT \
        "$@"
fi

