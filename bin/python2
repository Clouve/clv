#!/usr/bin/env bash
SCRIPT_PATH="$(
  cd "$(dirname "$0")" || exit
  pwd -P
)"
source "$SCRIPT_PATH"/init/clv python2
source "$SCRIPT_PATH"/inc/ports
docker run "$IT" --rm -a STDOUT \
    "${PUBLISHED_PORTS[@]}" \
    --entrypoint "python2" \
    -e PYTHONUSERBASE="/root/base" \
    -v "$CLVHOME:/root" \
    -v "$PWD:/clv" \
    -w "/clv" \
    python:2.7 "$@"
