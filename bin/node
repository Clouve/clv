#!/usr/bin/env bash
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
source "$SCRIPT_PATH"/init/clv node
source "$SCRIPT_PATH"/inc/ports
docker run "$IT" --rm -a STDOUT \
    "${PUBLISHED_PORTS[@]}" \
    --entrypoint "node" \
    -e PATH="/root/node/bin:$PATH" \
    -v "$CLVHOME:/root" \
    -v "$PWD:/clv" \
    -w "/clv" \
    node "$@"
