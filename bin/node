#!/usr/bin/env bash
if [[ $1 == "CLV_ENV_SETUP" ]]; then
    echo "clv is setting up environment for node"
    docker run --rm \
        -v "$HOME/.clv/root:/root" \
        -v "$PWD:/clv" \
        -w "/clv" \
        node npm config set prefix '/root/node'
else
    docker run -it --rm \
        --network host \
        -e PATH="/root/node/bin:$PATH" \
        -v "$HOME/.clv/root:/root" \
        -v "$PWD:/clv" \
        -w "/clv" \
        -a STDOUT \
        node $@
fi

