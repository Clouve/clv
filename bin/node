#!/usr/bin/env bash
SCRIPT_PATH="$(
  cd "$(dirname "$0")" || exit
  pwd -P
)"
source "$SCRIPT_PATH"/init/clv node
source "$SCRIPT_PATH"/inc/ports
docker run "$IT" --rm -a STDOUT \
    "${PUBLISHED_PORTS[@]}" \
    --entrypoint "node" \
    -e PATH="/root/bin:$PATH" \
    -v "$CLVHOME:/root" \
    -v "$PWD:/clv" \
    -w "/clv" \
    node "$@"
