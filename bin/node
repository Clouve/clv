#!/usr/bin/env bash
SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
if [[ $1 == "clv-install" ]]; then
    if [[ ! -e ~/.clv/bin/node ]]; then
        docker run --rm \
            -v "$HOME/.clv/home:/root" \
            -v "$PWD:/clv" \
            -w "/clv" \
            node npm config set prefix '/home/node'
        echo "clv is installing node"
        cp "$SCRIPTPATH/node" ~/.clv/bin/node
    fi
else
    docker run -it --rm \
        --entrypoint "node" \
        --network host \
        -e PATH="/home/node/bin:$PATH" \
        -v "$HOME/.clv/home:/root" \
        -v "$PWD:/clv" \
        -w "/clv" \
        -a STDOUT \
        node $@
fi

