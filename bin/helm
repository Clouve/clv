#!/usr/bin/env bash
SCRIPT_PATH="$(
  cd "$(dirname "$0")" || exit
  pwd -P
)"
source "$SCRIPT_PATH"/init/clv alpine/helm
docker run "$IT" --rm -a STDOUT \
    --entrypoint "helm" \
    -v "$CLVHOME/.config:/root/.config" \
    -v "$CLVHOME:/root" \
    -v "$PWD:/clv" \
    -w "/clv" \
    alpine/helm "$@"
