#!/usr/bin/env bash
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
"$SCRIPT_PATH"/init/node prettier
source "$SCRIPT_PATH"/inc/tty
docker run "$IT" --rm \
    --entrypoint "prettier" \
    -e PATH="/root/node/bin:$PATH" \
    -v "$HOME/.clv/home:/root" \
    -v "$PWD:/clv" \
    -w "/clv" \
    -a STDOUT \
    node "$@"
