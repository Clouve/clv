#!/usr/bin/env bash
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
source "$SCRIPT_PATH"/init/clv python
source "$SCRIPT_PATH"/inc/ports
docker run "$IT" --rm -a STDOUT \
    "${PUBLISHED_PORTS[@]}" \
    --entrypoint "python" \
    -e PYTHONUSERBASE="/root/python" \
    -v "$CLVHOME:/root" \
    -v "$PWD:/clv" \
    -w "/clv" \
    python "$@"
