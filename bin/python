#!/usr/bin/env bash
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
if [[ $1 == "clv-install" ]]; then
    if [[ ! -e /usr/local/bin/python ]]; then
        echo "clv is installing python"
        sudo cp "$SCRIPT_PATH/python" /usr/local/bin/python
    fi
elif [[ $1 == "clv-uninstall" ]]; then
    if [[ -e /usr/local/bin/python ]]; then
        echo "clv is uninstalling python"
        sudo rm /usr/local/bin/python
    fi
else
    source "$SCRIPT_PATH"/_ports
    docker run -it --rm \
        ${PUBLISHED_PORTS:-"--network=host"} \
        --entrypoint "python" \
        -e PYTHONUSERBASE="/root/python" \
        -v "$HOME/.clv/home:/root" \
        -v "$PWD:/clv" \
        -w "/clv" \
        -a STDOUT \
        python "$@"
fi

