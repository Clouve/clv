#!/usr/bin/env bash
# EXAMPLE: prefix your command with the following to publish 3000 and 4000 ports
# PORTS="3000 4000"
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
if [[ $1 == "clv-install" ]]; then
    if [[ ! -e /usr/local/bin/_ports ]]; then
        sudo cp "$SCRIPT_PATH/_ports" /usr/local/bin/_ports
    fi
elif [[ $1 == "clv-uninstall" ]]; then
    if [[ -e /usr/local/bin/_ports ]]; then
        sudo rm /usr/local/bin/_ports
    fi
else
    PUBLISHED_PORTS=""
    for PORT in $PORTS; do
        PUBLISHED_PORTS="$PUBLISHED_PORTS--publish=$PORT:$PORT "
    done
fi
