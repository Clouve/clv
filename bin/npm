#!/usr/bin/env bash
SCRIPT_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
"$SCRIPT_PATH"/init/node
source "$SCRIPT_PATH"/inc/ports
docker run -it --rm \
    ${PUBLISHED_PORTS:-"--network=host"} \
    --entrypoint "npm" \
    -e PATH="/root/node/bin:$PATH" \
    -v "$HOME/.clv/home:/root" \
    -v "$PWD:/clv" \
    -w "/clv" \
    -a STDOUT \
    node "$@"
