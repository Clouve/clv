#!/usr/bin/env bash
SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
if [[ $1 == "clv-install" ]]; then
    if [[ ! -e ~/.clv/bin/npm ]]; then
        "$SCRIPTPATH"/node clv-install
        if [[ -e ~/.clv/bin/node ]]; then
            echo "clv is installing npm"
            cp "$SCRIPTPATH/npm" ~/.clv/bin/npm
        else
            echo "node does not exist"
        fi
    fi
else
    docker run -it --rm \
        --entrypoint "npm" \
        --network host \
        -e PATH="/home/node/bin:$PATH" \
        -v "$HOME/.clv/home:/root" \
        -v "$PWD:/clv" \
        -w "/clv" \
        -a STDOUT \
        node $@
fi